[pull]
	rebase = true
[commit]
	gpgsign = true
[init]
	defaultBranch = main

[pager]
	#diff = delta
	log = delta
	reflog = delta
	show = delta

[diff]
	external = difft

[interactive]
	diffFilter = delta --color-only

[delta]
	features = side-by-side decorations
	whitespace-error-style = 22 reverse
	syntax-theme = Monokai Extended Light
	navigate = true
	line-numbers = false

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
